{
  "build": {
    "builder": "NIXPACKS",
    "nixpacksPlan": {
      "phases": {
        "setup": {
          "nixPkgs": [
            "python311"
          ]
        },
        "install": {
          "cmds": [
            "pip install -r requirements.txt"
          ]
        },
        "start": {
          "cmd": "uvicorn main:app --host 0.0.0.0 --port ${PORT:-8000}"
        }
      }
    }
  }
}